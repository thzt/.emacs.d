(provide 'key-binding)

;cut
(global-set-key "\C-x" 'kill-region)

;copy
(global-set-key "\C-c" 'kill-ring-save)

;paste
(global-set-key "\C-v" 'yank)

;select all
(global-set-key "\C-a" 'mark-whole-buffer)

;undo
(global-set-key "\C-z" 'undo)

;save
(global-set-key "\C-s" 'save-buffer)


